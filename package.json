{
	"scripts": {
        "build": "webpack",
		"watch": "cls && webpack --watch",
		"server": "cls && sanic server:app --host 127.0.0.1 --port 7788 --reload",
		"socket": "start cmd /MIN /C \"python mysocket.py\"",
		"all": "npm run socket && npm run server",

		"prestart": "wt -w \"ChartWithEvents\" new-tab -d \".\" --tabColor #0AA --title \"Socket\" PowerShell -c \"python mysocket.py\"",
		"start": "wt -w \"ChartWithEvents\" new-tab -d \".\" --tabColor #FA0 --title \"Server\" PowerShell -c \"sanic server:app --host 127.0.0.1 --port 7788 --reload\"",
		"poststart": "wt -w \"ChartWithEvents\" ft -t 1"
    },
    "dependencies": {
        "apexcharts": "^3.44.0",
        "webpack": "^5.89.0"
    },
    "devDependencies": {
        "webpack-cli": "^5.1.4"
    }
}